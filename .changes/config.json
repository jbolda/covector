{
  "gitSiteUrl": "https://www.github.com/jbolda/covector/",
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": "npm view ${ pkg.pkg } version",
      "prepublish": ["npm pack"],
      "publish": "npm publish --access public",
      "postpublish": [
        "git tag ${ pkg.pkg }-v${ pkgFile.versionMajor } -f",
        "git tag ${ pkg.pkg }-v${ pkgFile.versionMajor }.${ pkgFile.versionMinor } -f",
        "git push --tags"
      ],
      "assets": [
        {
          "path": "./${ pkg.pkg }-${ pkgFile.version }.tgz",
          "name": "${ pkg.pkg }-${ pkgFile.version }.tgz"
        }
      ]
    }
  },
  "packages": {
    "covector": {
      "path": "./packages/covector",
      "manager": "javascript",
      "dependencies": [
        "@covector/apply",
        "@covector/assemble",
        "@covector/files",
        "@covector/changelog",
        "all"
      ]
    },
    "@covector/apply": {
      "path": "./packages/apply",
      "manager": "javascript",
      "dependencies": ["all"]
    },
    "@covector/assemble": {
      "path": "./packages/assemble",
      "manager": "javascript",
      "dependencies": ["all"]
    },
    "@covector/changelog": {
      "path": "./packages/changelog",
      "manager": "javascript",
      "dependencies": ["@covector/files", "all"]
    },
    "@covector/files": {
      "path": "./packages/files",
      "manager": "javascript",
      "dependencies": ["all"]
    },
    "@covector/command": {
      "getPublishedVersion": false,
      "path": "./packages/command",
      "manager": "javascript",
      "dependencies": ["all"]
    },
    "action": {
      "path": "./packages/action",
      "manager": "javascript",
      "publish": false,
      "getPublishedVersion": false,
      "dependencies": ["covector"]
    },
    "all": {
      "version": true,
      "publish": false
    }
  }
}
