{
  "pkgManagers": {
    "javascript": {
      "build": "yarn build",
      "version": true,
      "getPublishedVersion": "npm view ${ pkg.pkg } version",
      "publish": "npm publish --access public",
      "postpublish": [
        "git tag ${ pkg.pkg }-v${ pkgFile.version }",
        "git push --tags"
      ]
    }
  },
  "packages": {
    "covector": {
      "path": "./packages/covector",
      "manager": "javascript",
      "dependencies": [
        "@covector/apply",
        "@covector/assemble",
        "@covector/files",
        "@covector/changelog",
        "all"
      ]
    },
    "@covector/apply": {
      "path": "./packages/apply",
      "manager": "javascript",
      "build": false,
      "dependencies": ["all"]
    },
    "@covector/assemble": {
      "path": "./packages/assemble",
      "manager": "javascript",
      "build": false,
      "dependencies": ["all"]
    },
    "@covector/files": {
      "path": "./packages/files",
      "manager": "javascript",
      "dependencies": ["all"]
    },
    "@covector/changelog": {
      "path": "./packages/changelog",
      "manager": "javascript",
      "build": false,
      "dependencies": ["@covector/files", "all"]
    },
    "action": {
      "path": "./packages/action",
      "manager": "javascript",
      "build": false,
      "preversion": "yarn build",
      "publish": false,
      "getPublishedVersion": false,
      "dependencies": ["covector"]
    },
    "all": {
      "version": true,
      "build": false,
      "publish": false
    }
  }
}
